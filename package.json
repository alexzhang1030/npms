{
  "name": "@alexzzz/npms",
  "version": "0.1.1",
  "packageManager": "pnpm@7.9.5",
  "description": "a CLI tool to manage npm scripts",
  "keywords": [
    "temir",
    "npm scripts",
    "npm",
    "scripts",
    "npm-scripts",
    "npm-scripts-manager",
    "cli"
  ],
  "homepage": "https://github.com/alexzhang1030/npms#readme",
  "bugs": {
    "url": "https://github.com/alexzhang1030/npms/issues"
  },
  "license": "MIT",
  "author": "alexzhang1030",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/npms.git"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "screenshots"
  ],
  "bin": {
    "npms": "./cli.mjs"
  },
  "sideEffects": false,
  "scripts": {
    "build": "temir build src/main.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp --commit --push --tag && pnpm publish --access public",
    "start": "temir src/main.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "up": "taze"
  },
  "dependencies": {
    "@temir/cli": "^0.0.16",
    "@temir/core": "^0.0.19",
    "@temir/tab": "^0.0.19",
    "fast-glob": "^3.2.12",
    "ohmyfetch": "^0.4.19",
    "vue": "3.2.37"
  },
  "devDependencies": {
    "@alexzzz/eslint-config": "1.4.0",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@types/node": "18.7.13",
    "bumpp": "8.2.1",
    "eslint": "8.23.0",
    "lint-staged": "13.0.3",
    "pnpm": "7.9.5",
    "simple-git-hooks": "2.8.0",
    "taze": "0.8.0",
    "tsx": "3.9.0",
    "typescript": "4.8.2",
    "unplugin-auto-import": "0.11.2",
    "vitest": "0.17.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit \"${1}\""
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@alexzzz"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
